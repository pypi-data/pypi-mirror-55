import pkg_resources
pkg_resources.require(["SConsider"])
import SConsider

Import('*')

from SCons.Script import File
sources = [
    File('adler32.c'),
    File('compress.c'),
    File('crc32.c'),
    File('deflate.c'),
    File('gzclose.c'),
    File('gzlib.c'),
    File('gzread.c'),
    File('gzwrite.c'),
    File('infback.c'),
    File('inffast.c'),
    File('inflate.c'),
    File('inftrees.c'),
    File('trees.c'),
    File('uncompr.c'),
    File('zutil.c'),
]

_sconsider_dist = pkg_resources.get_distribution("SConsider").parsed_version
if _sconsider_dist < pkg_resources.parse_version("0.5.dev"):
    buildSettings = {
        packagename: {
            'sourceFiles': sources,
            'targetType': 'LibraryShared',
            'appendUnique': {
            },
            'public': {
                'includeSubdir': '',
            },
        },
    }

    SConsider.createTargets(packagename, buildSettings)
