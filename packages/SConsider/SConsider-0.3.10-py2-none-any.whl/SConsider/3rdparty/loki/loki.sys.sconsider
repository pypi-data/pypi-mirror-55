    env = SConsider.cloneBaseEnv()
    conf = Configure(env)
    if conf.CheckLibWithHeader('loki', 'loki/SmartPtr.h', 'CXX'):
        conf.env.Append(CPPDEFINES='HAS_LOKI')
    env = conf.Finish()

    buildSettings = {}
    if 'HAS_LOKI' in env['CPPDEFINES']:
