  <h3 class="small-12 columns">Unthemed select2</h3>
</div>
<div class="row">
  <div class="small-12 columns">
    <select class="js-example-basic-single" style="width: 100%">
      <option></option>
      <option value="AL">Alabama</option>
      <option value="WY">Wyoming</option>
    </select>
  </div>
</div>
<hr />

<script type="text/javascript">
 $(document).ready(function() {
     $(".js-example-basic-single").select2({
         placeholder: "Select a state",
         theme: "classic"
     });
     $(".js-example-basic-mult").select2({
         placeholder: "Select a state",
         allowClear: true,
         theme: "classic"
     });
     $(".js-example-basic-single-foundation").select2({
         placeholder: "Select a state",
         allowClear: true,
         theme: "foundation"
     });
     $(".js-example-basic-mult-foundation").select2({
         placeholder: "Select a state",
         allowClear: true,
         theme: "foundation"
     });
     $(".js-example-basic-disabled-foundation").select2({
         placeholder: "Select a state",
         theme: "foundation",
     });
     $(".js-example-basic-nosearch-foundation").select2({
         placeholder: "Select a state",
         theme: "foundation",
         minimumResultsForSearch: Infinity
     });

 });
</script>

