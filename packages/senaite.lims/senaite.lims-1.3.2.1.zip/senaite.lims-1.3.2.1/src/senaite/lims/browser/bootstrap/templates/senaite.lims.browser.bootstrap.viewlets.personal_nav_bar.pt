<ul id="portal-personaltools-wrapper"
    class="nav navbar-nav navbar-right"
    i18n:domain="plone">

  <p class="hiddenStructure" i18n:translate="heading_personal_tools">Personal tools</p>

  <li class="dropdown">
    <tal:logged tal:condition="python:view.user_actions and not view.anonymous">
      <a id="user-name"
         class="dropdown-toggle"
         data-toggle="dropdown"
         role="button"
         aria-haspopup="true"
         aria-expanded="false"
         tal:attributes="href view/homelink_url">
        <span
          tal:replace="view/user_name">
          John
        </span>
        <span class="caret"></span>
      </a>

      <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
        <li tal:repeat="action view/user_actions"
            tal:attributes="id string:personaltools-${action/id}">
          <a href=""
             tal:attributes="href action/url;
                   target action/link_target|nothing"
             tal:content="action/title"
             i18n:translate="">
            action title
          </a>
        </li>
      </ul>
    </tal:logged>

    <tal:anon tal:condition="python:view.user_actions and view.anonymous"
              tal:define="actions view/user_actions;
                          action python:len(actions)!= 0 and actions[0] or None;
                          other_actions python:len(actions) > 1 and actions[1:] or []">
      <a id="user-name"
         class="dropdown-toggle"
         data-target="#"
         data-toggle="dropdown"
         role="button"
         aria-haspopup="true"
         aria-expanded="false"
         tal:attributes="href action/url;
                         id string:personaltools-${action/id};
                         target action/link_target|nothing;
                         class python:other_actions and 'dropdown-toggle' or '';
                         data-toggle python:other_actions and 'dropdown' or None"
         tal:content="action/title"
         i18n:translate="">
        action title
      </a>
      <ul class="dropdown-menu"
          role="button"
          aria-labelledby="dLabel"
          tal:condition="other_actions"
          id="portal-personaltools">
        <li id="anon-personalbar">
          <!-- Login Link (always display in dropdown menu) -->
          <a tal:attributes="href action/url;"
             tal:content="action/title"
             i18n:translate="">
            action title
          </a>
          <!-- Other Actions, e.g. Registration -->
          <tal:actions repeat="action other_actions">
            <a href=""
               tal:attributes="href action/url;
                               id string:personaltools-${action/id};
                               target action/link_target|nothing;"
               tal:content="action/title"
               i18n:translate="">
              action title
            </a>
          </tal:actions>
        </li>
      </ul>
    </tal:anon>
  </li>
</ul>
