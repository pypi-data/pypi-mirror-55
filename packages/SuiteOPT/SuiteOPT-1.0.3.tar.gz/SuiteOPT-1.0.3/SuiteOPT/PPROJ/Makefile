#===============================================================================
# PPROJ/Makefile: For compiling PPROJ
#===============================================================================

default: demo

#-------------------------------------
# Lib
#-------------------------------------

lib:
	( cd Lib ; $(MAKE) )

#-------------------------------------
# LibPy
#-------------------------------------

libpy:
	( cd LibPy ; $(MAKE) )

#-------------------------------------
# Demo
#-------------------------------------

demo:
	( cd Demo ; $(MAKE) )

#-------------------------------------
# Purge
#-------------------------------------

purge:
	( cd Lib ; $(MAKE) purge )
	( cd LibPy ; $(MAKE) purge )
	( cd Demo ; $(MAKE) purge )
	( cd MATLAB  ; $(RM) *.mex* *.o *.obj )

#-------------------------------------
# Clean
#-------------------------------------

clean:
	( cd Lib ; $(MAKE) clean )
	( cd LibPy ; $(MAKE) clean )
	( cd Demo ; $(MAKE) clean )
	( cd MATLAB  ; $(RM) *.mex* )
