#===============================================================================
# CGDESCENT/Makefile: For compiling CGDESCENT
#===============================================================================

default: demo

ccode: demo

#-------------------------------------
# Lib
#-------------------------------------
lib:
	( cd Lib ; $(MAKE) )


#-------------------------------------
# LibPy
#-------------------------------------
libpy:
	( cd LibPy ; $(MAKE) )

#-------------------------------------
# Demo
#-------------------------------------
demo:
	( cd Demo ; $(MAKE) )

#-------------------------------------
# Purge
#-------------------------------------
purge:
	( cd Lib ; $(MAKE) purge )
	( cd LibPy ; $(MAKE) purge )
	( cd Demo ; $(MAKE) purge )
	( cd MATLAB  ; $(RM) *.mex* )
	( cd CUTEst  ; $(RM) *.o )

#-------------------------------------
# Clean
#-------------------------------------
clean:
	( cd Lib ; $(MAKE) clean )
	( cd LibPy ; $(MAKE) clean )
	( cd Demo ; $(MAKE) clean )
	( cd MATLAB  ; $(RM) *.mex* )
	( cd CUTEst  ; $(RM) *.o )
