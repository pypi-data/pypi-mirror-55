def func(i):
    os.system(cmd[i])


if __name__ == '__main__':
    # First, create the TLS directory 
    try : os.system('rm -rf tls')
    except : pass 

    files_to_do = glob.glob('../NG*.dat')
    print(files_to_do)

    cmd = []
    for i in range(len(monos)):
        for j in files_to_do:
            if monos[i][1] in j:
                print(j)

                # Make the call to tls 
                call = 'tls {:} --gpu --period {:} --radius_1 {:} --k {:} --b {:}'.format(j, monos[i][3], monos[i][4], monos[i][5], monos[i][6])
                #call = 'tls {:} --period {:} --radius_1 {:} --k {:} --b {:}'.format(j, monos[i][3], monos[i][4], monos[i][5], monos[i][6])

                #print(call)
                #os.system(call)
                cmd.append(call) 
    pool = Pool(4) 
    pool.map(func, range(len(cmd)))
    pool.close()
    pool.join()
