    <!-- ++++++++++++++++++ bloc ++++++++++++++++++ -->
    <xs:element name="bloc">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="espacev" minOccurs="0"/>
                <xs:element ref="ligne"/>
                <xs:sequence minOccurs="0" maxOccurs="unbounded">
                    <xs:element ref="espacev" minOccurs="0"/>
                    <xs:element ref="ligne"/>
                </xs:sequence>
            </xs:sequence>
